<% if @department.errors.any? %>
	<div id="errors">
		<p>Please correct the following <%= pluralize(@department.errors.count, "error") %>:</p>
		<ul>
			<% @department.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@department) do |f| %>
	<div class="form">
		<%#= f.label :name %>
		<%= f.text_field :name, placeholder: "Enter Name", class:"form-control form-control-md", id:"formInput" %>
	</div>
	<div class="form">
		<%#= f.label :notes %>
		<%= f.text_field :notes, placeholder: "Enter Notes", class:"form-control form-control-md", id:"formInput" %>
	</div>
	<div  class="form">
		<%= f.submit @department.new_record? ? "Create Department" : "Update Department", class:"btn btn-dark", id:"button"  %>
	</div>
<% end %>

<div class="page-links">
	<%= link_to 'Back', :back, class: "btn btn-success btn-sm" %> 
</div>