<h1>All Departments</h1>

<!-- Search if the name field contains... -->
<%= search_form_for @q do |f| %><br />
  <%= f.label :name_cont, 'Name contains' %><br />
  <%= f.search_field :name_cont %><br /><br />
  <%= f.submit name: '' %><br />
<% end %>

<table>
	<tbody>
		<tr>
			<th>Department</th>
			<th>General Notes</th>
		</tr>
		<%= render partial: "department", collection: @departments %>
	</tbody>
</table>



<p><%= link_to 'Add Department', new_department_path %></p> 
<p><%= link_to 'All Departments', departments_path %></p>