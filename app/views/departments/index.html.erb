<h1>All Departments</h1>

<!-- Search if the name field contains... -->
<div class="search">
	<%= search_form_for @q do |f| %><br />
		<%= f.label :name_cont, 'Search For Departments, Name contains ...' %><br />
		<%= f.search_field :name_cont, class:"form-control form-control-sm", id:"searchInput" %><br />
		<%= f.submit name: '', class: "btn btn-primary btn-sm" %><br />
	<% end %>
</div>

<table class="table table-striped">
	<tbody>
		<tr>
			<th>Department</th>
			<th>General Notes</th>
		</tr>
		<%= render partial: "department", collection: @departments %>
	</tbody>
</table>


<div class="page-links">
	<%= link_to 'Add Department', new_department_path, class: "btn btn-secondary btn-sm" %> | 
	<%= link_to 'Back', :back, class: "btn btn-success btn-sm" %> 
</div>
