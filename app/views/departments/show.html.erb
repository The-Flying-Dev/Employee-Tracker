<h1><%= @department.name %></h1>

<% if @department.projects.size > 0 %>
	<table>
		<tbody>
			<tr>
				<th>Project</th>
				<th>Department</th>
			</tr>
			<%= render partial: "projects/project", collection: @department.projects %>					
		</tbody>
	</table>
	<br />

<p><%= link_to 'Edit department', edit_department_path(@department) %></p>
<br />

	<p>Employees in this department</p>
	<table>
	<tbody>
		<tr>
			<th>Employee</th>
			<th>Department</th>	
			<th>Email</th>
			<th>Phone Number</th>	
			<th></th>	
		</tr>
		<%= render partial: "employees/employee", collection: @department.employees %>
	</tbody>
</table>	
<% else %>
	<p>No projects</p>
<% end %>

<br />
<%= link_to 'Home', root_path %>