<h1><%= @project.name %></h1>

<p>Department: <%= @project.department.name %>
<p>Rate: <%= @project.rate %></p>


<p><%= link_to 'Edit Project', edit_project_path(@project) %></p>

<div class="remoteform">
	<h2>Add Work</h2>
	<%= render partial: 'works/form' %>
</div>

<% if @project.works.size > 0 %>
	<table>
		<tbody>
			<tr id="headerrow">
				<th>View</th>
				<th>User</th>
				<th>Project</th>
				<th>Date/Time</th>
				<th>Hours</th>
			</tr>
			<%= render partial: "works/work", collection: @project.works %>
		</tbody>
	</table>
<% else %>
	<p>No work items</p>
<% end %>

<%= link_to 'All Projects', projects_path %>