<p>Employee's name: <%= @work.employee.fname %> <%= @work.employee.lname %></p>
<p>Project's name: <%= @work.project.name %></p>
<p>Date Performed: <%= @work.datetimeperformed %></p>
<p>Hours worked for this project: <%= @work.hours %></p>

<!--if file is present, then display a link -->

<%if @work.file.present? %>
  <p>View File: <%#= link_to @work.file, "/uploads/#{@work.file}", target: "_blank" %>  
  <%= link_to @work.file.filename, rails_blob_path(@work.file, disposition: "attachement") %>
  </p>
<% end %>

<p><%= link_to  "All Works", works_path %> | 
<%= link_to 'Edit Work', edit_work_path(@work) %></p>